---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HomeHeroCarousel from '../components/HomeHeroCarousel.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    gsap.registerPlugin(ScrollTrigger);

    const textElement = document.querySelector('.hero-description');

    gsap.fromTo(
        textElement,
        { opacity: 0 },
        {
            opacity: 1,
            duration: 1,
            scrollTrigger: {
                trigger: textElement,
                start: 'top 80%',
                end: 'bottom 20%',
                scrub: true
            }
        }
    );
</script>

<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <main>
            <HomeHeroCarousel />
            <div class="hero-description">
                NBCUniversal is one of the world’s leading media and entertainment companies. We create world-class content, which we distribute across our
                portfolio of film, television, and streaming, and bring to life through our theme parks and consumer experiences.
            </div>
        </main>
        <Footer />
    </body>
</html>
<style>
    .hero-description {
        width: calc(100% - 20rem);
        height: 80vh;
        font-weight: 400;
        font-size: 51px;
        line-height: 61.2px;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 10rem;
    }
    h1 {
        color: var(--c-text-primary);
    }
</style>
